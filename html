    <script >
        function calculateInduction() {
            let fluxStart = parseFloat(document.getElementById('fluxStart').value);
            let fluxEnd = parseFloat(document.getElementById('fluxEnd').value);
            let time = parseFloat(document.getElementById('time').value);
        
            if (time <= 0) {
            document.getElementById('result').textContent = "Time must be greater than zero";
                
            }

            let changeInFlux = fluxEnd - fluxStart;
            let emf = -changeInFlux / time;
            
           console.log(document.getElementById('result'));
           return result;
        }
